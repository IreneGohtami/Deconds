<% include header %>

	<div id="carousel" class="carousel slide" data-ride="carousel" style="width:100%; height:680px;">
		<!-- Indicators -->
		<ul class="carousel-indicators">
			<li data-target="#carousel" data-slide-to="0" class="active"></li>
			<li data-target="#carousel" data-slide-to="1"></li>
			<li data-target="#carousel" data-slide-to="2"></li>
			<li data-target="#carousel" data-slide-to="3"></li>
			<li data-target="#carousel" data-slide-to="4"></li>
		</ul>
		
		<!-- The slideshow -->
		<div class="carousel-inner">
			<div class="carousel-item active" style="background-image: url(/images/c1.jpg);"></div>
			<div class="carousel-item" style="background-image: url(/images/c2.jpg);"></div>
			<div class="carousel-item" style="background-image: url(/images/c3.jpg);"></div>
			<div class="carousel-item" style="background-image: url(/images/c4.jpg);"></div>
			<div class="carousel-item" style="background-image: url(/images/c5.jpg);"></div>
		</div>
		
		<!-- Left and right controls -->
		<a class="carousel-control-prev" href="#carousel" data-slide="prev">
			<span class="carousel-control-prev-icon"></span>
		</a>
		<a class="carousel-control-next" href="#carousel" data-slide="next">
			<span class="carousel-control-next-icon"></span>
		</a>
	</div>
	<div class="container" style="padding-top:10px; padding-bottom:10px;">
		<div class="row">
			<div class="col-sm-12">
				<h3>Search your favorite businesses from our registered partners</h3>
				<hr>
				<input type="text" class="form-control" id="search_biz" name="search_biz" placeholder="Type something...">
				<br>
				<h3>Or browse based on their industry</h3>
				<hr>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Medical')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Medical</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Education')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Education</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Finance')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Finance</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('e-Commerce')" style="height:60px; padding:15px 5px; margin-bottom:5px;">e-Commerce</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Entertainment')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Entertainment</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Vanity')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Vanity</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Security')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Security</a>
				<a class="btn btn-outline-secondary col-md-2 col-sm-3 col-xs-4" onclick="loadBizByIndustry('Others')" style="height:60px; padding:15px 5px; margin-bottom:5px;">Others</a>
				<br><br>
				<h3>Our Partners</h3>
				<hr>
				<% for(var i=0; i<companyList.length; i++){ %>
					<%- companyList[i].company_name %><br>
				<% } %>
			</div>
		</div>
	</div>
	<div class="modal fade" id="bizModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="modalLabel">Industry</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-body">
					
				</div>
			</div>
		</div>
	</div>

	<script>
		function loadBizByIndustry(industry){
			$('#modalLabel').text('List of ' + industry + ' organizations');
			$('#bizModal').modal('show');

			var str = "<ol>";
			<% for(var i=0; i<companyList.length; i++){ %>
				if("<%- companyList[i].industry %>" == industry){
					str += "<li><a href='/business/<%- companyList[i]._id %>'><%- companyList[i].company_name %></a></li>";
				}
			<% } %>
			str += "</ol>";
			$('.modal-body').html(str);
		}
	</script>

<% include footer %>