<% include header %>
	
	<div class="container" style="padding-top:10px; padding-bottom:10px;">
		<div class="row">
			<div class="col-sm-6">
				<h2>Your Account</h2>
				<div class="mt-4"></div>
				<form method="post" action="/login/validate">
					<div class="form-group row">
						<label for="email" class="col-sm-2 col-form-label">Username</label>
						<div class="col-sm-10">
							<input type="text" class="form-control" id="username" name="username" placeholder="username" required>
						</div>
					</div>
					<div class="form-group row">
						<label for="password"class="col-sm-2 col-form-label">Password</label>
						<div class="col-sm-10">
							<input type="password" class="form-control" id="password" name="password" placeholder="password" required>
						</div>
					</div>
					<button type="submit" class="btn btn-primary btn-md float-right">LOGIN</button>
					<span class="required"><%= error_msg %></span>
					<div class="mt-4"></div>
				</form>
			</div>
			<div class="col-sm-6">
				<h2>Don't have an account?</h2>
				Sign up now for free! Simply choose your type of account and click Next.
				
				<div class="mt-4"></div>
				
				<form method="post" action="/signup/type">
					<div class="form-group row text-center">
						<div class="btn-group btn-group-toggle col-sm-12" data-toggle="buttons">
							<label class="btn btn-outline-secondary col-sm-4" style="height:42px;">
								<input type="radio" name="account_type" value="business" required> Business
							</label>
							<label class="btn btn-outline-secondary col-sm-4">
								<input type="radio" name="account_type" value="customer"> Customer
							</label>
							<label class="btn btn-outline-secondary col-sm-4">
								<input type="radio" name="account_type" value="staff"> Staff
							</label>
						</div>
					</div>
					<div class="pt-3"></div>
					<button type="submit" class="btn btn-primary btn-md float-right">NEXT</button>
				</form>
			</div>
		</div>
	</div>
	
	<script>
		function validateLogin(){
			
		}
	</script>
	
<% include footer %>